<?xml version="1.0" encoding="utf-8"?>
<manifest package="hu.bme.xj4vjg.petshop"
		  xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:name=".PetShopApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<meta-data android:name="DATABASE" android:value="pet_shop.db" />
		<meta-data android:name="VERSION" android:value="2" />
		<meta-data android:name="QUERY_LOG" android:value="true" />
		<meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="hu.bme.xj4vjg.petshop.model" />

		<activity android:name=".ui.login.LoginActivity">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity android:name=".ui.petlist.PetListActivity">
		</activity>
		<activity android:name=".ui.petdetail.PetDetailActivity">
		</activity>
		<activity android:name=".ui.addpet.AddPetActivity">
		</activity>
	</application>

</manifest>